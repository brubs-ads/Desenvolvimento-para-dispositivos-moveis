<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Confinance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Confinance" parent="Base.Theme.Confinance" />

    <style name="Theme.Confinance.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Confinance.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Confinance.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BoldTextTermsOfUseAndPrivacy">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ContentTextTermsOfUseAndPrivacy">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_opacity_50</item>
    </style>

    <style name="ThemeCustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMinor">50%</item>
    </style>

    <style name="ThemeCustomDialogBottom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMinor">100%</item>

    </style>

    <style name="ThemeForSplash" parent="Base.Theme.Confinance">
        <item name="colorPrimaryDark">@color/purple_1</item>
    </style>

    <style name="ThemeForActivityUser" parent="Base.Theme.Confinance">
        <item name="colorPrimaryDark">#333333</item>
        <item name="android:textColorLink">@color/blue_2</item>
    </style>

    <style name="ThemeForActivityCompany" parent="Base.Theme.Confinance">
        <item name="colorPrimaryDark">@color/purple_2</item>
    </style>

    <style name="NavigationItemAppearance">
        <item name="android:textColor">#B3808080</item>
        <item name="android:textSize">12.9sp</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="NavigationSubTitleAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12.9sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
<!--        <item name="android:textStyle">bold</item>-->
    </style>

</resources>