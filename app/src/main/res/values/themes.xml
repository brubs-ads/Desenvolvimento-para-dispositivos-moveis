<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Confinance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>

    </style>

    <style name="Theme.Confinance" parent="Base.Theme.Confinance" />

    <style name="Theme.Confinance.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Confinance.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Confinance.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BoldTextTermsOfUseAndPrivacy">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ContentTextTermsOfUseAndPrivacy">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_opacity_50</item>
    </style>

    <style name="ThemeCustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMinor">50%</item>
    </style>

    <style name="ThemeCustomDialogBottom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMinor">100%</item>

    </style>

    <style name="ThemeForSplash" parent="Base.Theme.Confinance">
        <item name="colorPrimaryDark">@color/purple_1</item>
    </style>

    <style name="ThemeForActivityUser" parent="Base.Theme.Confinance">
        <item name="colorPrimaryDark">#333333</item>
        <item name="android:textColorLink">@color/blue_2</item>
    </style>

    <style name="ThemeForActivityCompany" parent="Base.Theme.Confinance">
        <item name="colorPrimaryDark">@color/purple_2</item>
    </style>

    <style name="ThemeForActivityRevenue" parent="Base.Theme.Confinance">
        <item name="colorPrimaryDark">@color/green_4</item>
    </style>

    <style name="ThemeForActivityExpense" parent="Base.Theme.Confinance">
        <item name="colorPrimaryDark">@color/red</item>
    </style>

    <style name="ThemeForActivityObjective" parent="Base.Theme.Confinance">
        <item name="colorPrimaryDark">@color/blue_3</item>
    </style>

    <style name="NavigationItemAppearance">
        <item name="android:textColor">#B3808080</item>
        <item name="android:textSize">12.9sp</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="NavigationSubTitleAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12.9sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="NoBorderEditText">
        <item name="android:background">@null</item>
    </style>

    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/rounded_menu_popup</item>
        <item name="android:textAppearance">@style/CenteredTextAppearance</item>
    </style>

    <style name="CenteredTextAppearance">
        <item name="android:gravity">center</item>
    </style>

    <style name="DatePickRevenue" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/green_4</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/YourDialogButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/YourDialogButtonStyle</item>
    </style>

    <style name="DatePickExpense" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/red</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/YourDialogButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/YourDialogButtonStyle</item>
    </style>
    <style name="YourDialogButtonStyle" parent="android:Widget.Material.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTintMode">add</item>
        <item name="cardElevation">0dp</item>
    </style>


</resources>