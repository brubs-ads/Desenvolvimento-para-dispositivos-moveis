<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="26dp"
                android:layout_marginStart="77dp"
                app:srcCompat="@drawable/lapis_novo"
                android:tint="@color/green_4"
        />

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignTop="@id/img"
                android:layout_toEndOf="@id/img"
                android:text="Editar Receita"
                android:layout_marginStart="14dp"
                android:fontFamily="@font/roboto_medium"
                android:textSize="15sp"
                android:textColor="@color/black_opacity_80"
        />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_information_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="VocÃª deseja editar esta receita?"
                android:fontFamily="@font/roboto"
                android:textSize="11.27sp"
                android:textColor="@color/black_opacity_80"
        />

        <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/text_information_edit"
                android:background="@color/gray"
                android:layout_marginTop="30.24dp"
        />


        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_cancell"
                android:layout_width="60dp"
                android:layout_height="15dp"
                android:layout_toStartOf="@id/button_yes"
                android:layout_alignBottom="@id/button_yes"
                android:layout_alignTop="@id/button_yes"
                android:layout_marginEnd="19dp"
                android:background="@android:color/transparent"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_bold"
                android:textSize="13sp"
                android:textColor="@color/green_4"
        />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_yes"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/view"
                android:text="Sim"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_bold"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:layout_marginEnd="11dp"
                android:background="@drawable/rounded_button_revenue"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
        />



    </RelativeLayout>

</androidx.cardview.widget.CardView>