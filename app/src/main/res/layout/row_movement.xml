<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
>
    <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >


        <androidx.cardview.widget.CardView
                android:id="@+id/card_movement"
                android:layout_width="324.5dp"
                android:layout_height="91.41dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"

        >

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_icon"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="16dp"
                />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_type_movement"
                        android:layout_width="80dp"
                        android:layout_height="18dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="11sp"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/black"
                        android:layout_alignTop="@id/image_icon"
                        android:layout_toEndOf="@id/image_icon"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/trash"
                        android:layout_width="17.37dp"
                        android:layout_height="17.37dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="6.4dp"
                        android:layout_marginEnd="1.9dp"
                        app:srcCompat="@drawable/lixeira"
                        android:visibility="gone"
                />


                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_date"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="10sp"
                        android:layout_below="@id/text_type_movement"
                        android:layout_alignStart="@id/text_type_movement"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/gray_4"
                />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_period"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="8.43sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="7dp"
                        android:textColor="@color/black_opacity_50"
                />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_value_movement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="26dp"
                        android:layout_marginBottom="9dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="12.8sp"
                />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </com.facebook.shimmer.ShimmerFrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>