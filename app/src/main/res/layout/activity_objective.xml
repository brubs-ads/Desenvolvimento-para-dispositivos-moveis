<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.objective.ObjectiveActivity"
        android:background="#EDEBEB"
>

    <com.google.android.material.appbar.AppBarLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="72dp">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue_3">


            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_back"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/voltar_telas"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/objectives"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_objective"
            android:layout_width="157dp"
            android:layout_height="157dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/fund_objetivo"
            android:elevation="8dp"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_create_objective"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/img_objective"
            app:layout_constraintStart_toStartOf="@id/img_objective"
            app:layout_constraintEnd_toEndOf="@id/img_objective"
            android:layout_marginTop="35dp"
            android:text="@string/create_objective"
            android:fontFamily="@font/roboto_medium"
            android:textSize="24dp"
            android:textColor="@color/black"
    />


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_information_objective"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_create_objective"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Economize para alcanÃ§ar seus objetivos"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="9dp"
    />


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_information_objective"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="35dp"
            android:text="Pressione (+) para criar o primeiro"
            android:fontFamily="@font/roboto_light"
            android:textSize="16sp"
            android:textColor="@color/black"
    />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_create_objective"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="17dp"
            app:srcCompat="@drawable/mais"
            android:tintMode="@color/white"
            android:backgroundTint="@color/blue_3"
    />


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_objective"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/appBarLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />


</androidx.constraintlayout.widget.ConstraintLayout>