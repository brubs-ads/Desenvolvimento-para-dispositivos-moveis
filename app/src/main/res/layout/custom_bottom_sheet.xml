<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <View
            android:id="@+id/view"
            android:layout_width="390dp"
            android:layout_height="276dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_Configure_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/view"
            app:layout_constraintStart_toStartOf="@id/view"
            android:text="@string/Configure_repeat"
            android:layout_marginTop="27dp"
            android:layout_marginStart="22dp"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
    />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_amount"
            android:layout_width="26dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toBottomOf="@id/text_Configure_repeat"
            app:layout_constraintStart_toStartOf="@id/view"
            android:layout_marginTop="31dp"
            android:layout_marginStart="17dp"
            app:srcCompat="@drawable/ic_launcher_background"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/image_amount"
            app:layout_constraintBottom_toBottomOf="@id/image_amount"
            app:layout_constraintTop_toTopOf="@id/image_amount"
            android:text="@string/amount"
            android:layout_marginStart="27dp"
            android:textColor="@color/gray_6"
    />


    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrow_top"
            android:layout_width="26dp"
            android:layout_height="28dp"
            app:layout_constraintStart_toEndOf="@id/text_amount"
            app:layout_constraintTop_toTopOf="@id/image_amount"
            android:layout_marginStart="140dp"
            app:srcCompat="@drawable/ic_launcher_background"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_cont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/arrow_top"
            app:layout_constraintTop_toTopOf="@id/arrow_top"
            app:layout_constraintBottom_toBottomOf="@id/arrow_top"
            android:text="2"
            android:fontFamily="@font/roboto"
            android:textSize="15sp"
            android:layout_marginStart="21dp"
            android:textColor="@color/black_opacity_80"
    />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrow_bottom"
            android:layout_width="26dp"
            android:layout_height="28dp"
            app:layout_constraintStart_toEndOf="@id/text_cont"
            app:layout_constraintBottom_toBottomOf="@id/arrow_top"
            app:layout_constraintTop_toTopOf="@id/arrow_top"
            app:srcCompat="@drawable/ic_launcher_background"
            android:layout_marginStart="22dp"
    />

    <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            app:layout_constraintTop_toBottomOf="@id/image_amount"
            app:layout_constraintStart_toStartOf="@id/view"
            app:layout_constraintEnd_toEndOf="@id/view"
            android:background="@color/gray_7"
            android:layout_marginTop="15dp"
    />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_period"
            android:layout_width="26dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toBottomOf="@id/view_1"
            app:layout_constraintStart_toStartOf="@id/image_amount"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/ic_launcher_background"
    />


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/text_amount"
            app:layout_constraintTop_toTopOf="@id/image_period"
            app:layout_constraintBottom_toBottomOf="@id/image_period"
            android:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:textColor="@color/gray_6"
            android:text="@string/period"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_period_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/arrow_top"
            app:layout_constraintTop_toTopOf="@id/text_period"
            android:layout_marginStart="13dp"
            android:text="@string/monthly"

    />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrow_bottom_menu"
            android:layout_width="26dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="@id/image_period"
            app:layout_constraintStart_toStartOf="@id/arrow_bottom"
            app:srcCompat="@drawable/ic_launcher_background"
    />

    <View
            android:id="@+id/view_2"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            app:layout_constraintTop_toBottomOf="@id/image_period"
            app:layout_constraintStart_toStartOf="@id/view"
            app:layout_constraintEnd_toEndOf="@id/view"
            android:background="@color/gray_7"
            android:layout_marginTop="22dp"
    />


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="220dp"
            android:layout_height="33dp"
            app:layout_constraintTop_toBottomOf="@id/view_2"
            app:layout_constraintStart_toStartOf="@id/view"
            app:layout_constraintEnd_toEndOf="@id/view"
            android:layout_marginTop="31dp"
            android:background="@drawable/button_custom_sheet"
            android:text="concluÃ­do"
            android:textColor="@color/white"
            android:fontFamily="@font/lato"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
