<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.expense.ExpenseActivity"
        android:background="#EDEBEB"
>

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:background="@color/red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="133dp"
                    app:title=" "
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            />

            <ImageView
                    android:id="@+id/arrow_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/voltar_telas"
                    android:importantForAccessibility="no"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="13dp"
                    android:scaleType="centerInside"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expenses"
                    android:layout_alignTop="@id/arrow_back"
                    android:layout_toEndOf="@id/arrow_back"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginStart="14dp"
            />

            <ImageView
                    android:id="@+id/arrow_back1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignBottom="@id/toolbar"
                    android:src="@drawable/seta_esquerda"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="14dp"
                    android:layout_marginStart="89dp"
                    android:importantForAccessibility="no"/>

            <TextView
                    android:id="@+id/text_month"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_toEndOf="@id/arrow_back1"
                    android:layout_toStartOf="@id/arrow_next"
                    android:layout_alignBottom="@id/toolbar"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_alignTop="@id/arrow_back1"
                    android:layout_marginBottom="14dp"
            />

            <ImageView
                    android:id="@+id/arrow_next"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="14dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@id/toolbar"
                    android:src="@drawable/seta_direita"
                    android:layout_marginEnd="90dp"
                    android:importantForAccessibility="no"/>


        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_create_revenue"
            android:layout_width="157dp"
            android:layout_height="157dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/fund_despesa"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_create_revenues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/image_create_revenue"
            app:layout_constraintEnd_toEndOf="@id/image_create_revenue"
            app:layout_constraintTop_toBottomOf="@id/image_create_revenue"
            android:text="@string/create_expenses"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:layout_marginTop="26dp"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_guia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_create_revenues"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="27dp"
            android:text="Pressione (+) para criar o primeiro"
            android:fontFamily="@font/roboto_light"
            android:textSize="16dp"
            android:textColor="@color/black"
    />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_create_revenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="17dp"
            app:srcCompat="@drawable/mais"
            android:tintMode="@color/white"
            android:backgroundTint="@color/red"
    />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/appbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
    />


</androidx.constraintlayout.widget.ConstraintLayout>