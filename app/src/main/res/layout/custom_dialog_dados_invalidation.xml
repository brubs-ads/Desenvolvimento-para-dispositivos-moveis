<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="317dp"
        android:layout_height="139dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="26dp"
                android:layout_marginStart="75dp"
                app:srcCompat="@drawable/ic_launcher_background"
        />

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignTop="@id/img"
                android:layout_toEndOf="@id/img"
                android:layout_marginStart="12dp"
                android:text="Dados inválidos"
                android:fontFamily="@font/roboto_medium"
                android:textSize="15dp"
                android:textColor="@color/black_opacity_80"
        />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_information_dados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img"
                android:layout_centerHorizontal="true"
                android:text="A senha atual que você forneceu não é válida. Por favor, verifique e tente novamente."
                android:textAlignment="center"
                android:fontFamily="@font/roboto"
                android:textSize="11.27sp"
                android:textColor="@color/black_opacity_80"
                android:layout_marginTop="13dp"
        />


        <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/text_information_dados"
                android:background="@color/gray"
                android:layout_marginTop="19.24dp"
        />


        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_try_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:text="@string/try_Again"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"
                android:textColor="@color/purple_2"
        />

    </RelativeLayout>


</androidx.cardview.widget.CardView>