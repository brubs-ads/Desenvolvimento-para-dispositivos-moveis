<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
>

    <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >


        <androidx.cardview.widget.CardView
                android:id="@+id/card_movement"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
        >

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="18dp"
                        android:translationZ="1000000000dp"
                        android:elevation="4dp"
                />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_type_objective"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="14sp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/black"
                        android:layout_alignTop="@id/image_icon"
                        android:layout_toEndOf="@id/image_icon"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_Edit"
                        android:layout_width="17.37dp"
                        android:layout_height="17.37dp"
                        android:layout_toStartOf="@id/trash"
                        android:layout_alignTop="@id/trash"
                        android:layout_alignBottom="@id/trash"
                        app:srcCompat="@drawable/lapis_novo"
                        app:tint="@color/black_opacity_50"
                        android:layout_marginEnd="9.63dp"
                        android:visibility="gone"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/trash"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="7dp"
                        app:srcCompat="@drawable/lixeira"
                        android:visibility="gone"
                />


                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_date"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:fontFamily="@font/inter_semibold"
                        android:textSize="11.55sp"
                        android:layout_below="@id/text_type_objective"
                        android:layout_alignStart="@id/text_type_objective"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/gray_4"
                />


                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_value_spared"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_date"
                        android:layout_alignStart="@id/image_icon"
                        android:layout_marginTop="17.32dp"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="12sp"
                        android:textColor="@color/green_6"
                />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_value_objective"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/text_value_spared"
                        android:layout_alignEnd="@id/progress_bar_horizontal"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="12sp"
                        android:textColor="@color/red_4"
                />


                <ProgressBar
                        android:id="@+id/progress_bar_horizontal"
                        android:layout_width="326dp"
                        android:layout_height="13dp"
                        style="@style/CustomProgressBar"
                        android:layout_below="@id/text_value_objective"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="6dp"
                />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>