<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.user.LoginActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_logo"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:elevation="10dp"
        android:src="@drawable/email_login" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/welcome_to_back"
        android:textColor="@color/black_opacity_80"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_access_your_account"
        android:layout_width="214dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:layout_below="@id/text_welcome"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/access_your_account"
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_whats_your_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_access_your_account"
        android:layout_marginStart="60dp"
        android:layout_marginTop="38dp"
        android:layout_alignParentStart="true"
        android:text="@string/whats_your_email"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_email"
        android:layout_width="326dp"
        android:layout_height="56dp"
        android:layout_below="@id/text_whats_your_email"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_edit_text"
        android:elevation="6dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/gray"
        android:hint="@string/Type_your_email"
        android:textColorHint="@color/black_opacity_80"
        android:textSize="14sp"
        android:paddingStart="20dp"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_whats_your_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="@color/black"
        android:text="@string/whats_your_password"
        android:textSize="16sp"
        android:layout_alignStart="@id/text_whats_your_email"
        android:layout_below="@id/edit_email"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_password_login"
        android:layout_width="326dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_edit_text"
        android:elevation="6dp"
        android:hint="Digite Sua Senha"
        android:textColorHint="@color/black_opacity_80"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:paddingStart="20dp"
        tools:ignore="RtlSymmetry"
        android:layout_below="@id/text_whats_your_password"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_eye"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:translationZ="10000dp"
        android:layout_alignEnd="@id/edit_password_login"
        android:layout_alignBottom="@id/edit_password_login"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/olho_aberto" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/forgot_password"
        android:layout_below="@id/edit_password_login"
        android:fontFamily="@font/poppins"
        android:textSize="12sp"
        android:layout_alignStart="@id/edit_password_login" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_login"
        android:layout_width="326dp"
        android:layout_height="56dp"
        android:layout_marginTop="66dp"
        android:background="@drawable/rounded_button"
        android:elevation="10dp"
        android:text="@string/login"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAllCaps="true"
        tools:ignore="TextContrastCheck"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_forgot_password"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/lato"
        android:text="@string/create_account"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black_opacity_80"
        android:layout_below="@id/button_login"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_you_agree_terms"
        android:layout_width="224dp"
        android:layout_height="24dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/inter_light"
        android:text="@string/you_agree_terms"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        tools:ignore="SmallSp" />
</RelativeLayout>